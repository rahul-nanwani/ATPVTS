<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutLock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
            <EditText
                android:id="@+id/vehicle_id"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="80dp"
                android:hint="Enter Vehicle Number"
                android:textColorHint="@color/quantum_white_100"
                android:visibility="gone"   />
            <Button
                android:id="@+id/buttonLock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="100dp"
                android:visibility="gone"
                android:text="@string/btlock" />

        <TextView
            android:id="@+id/textLock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:paddingTop="250dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/quantum_white_100"
            android:layout_marginTop="100dp"
            android:text="Locked As Vehicle"
            android:textSize="30sp" />

    </LinearLayout>

</RelativeLayout>